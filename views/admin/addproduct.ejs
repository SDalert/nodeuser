    <div class="col-xs-10">
        <ol class="breadcrumb">
            <li>商品管理</li>
            <li>商品列表</li>
        </ol>
    </div>
    <div class="col-xs-10">
        <ul class="list-group">
            <li class="list-group-item">添加商品</li>
            <li class="list-group-item">
                <form class="form-horizontal" method="POST" enctype="multipart/form-data" action="/admin/doproduct">
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-1 control-label">商品名称:</label>
                        <div class="col-sm-3">
                            <input type="text" class="form-control" name="productusername" id="inputEmail3" placeholder="">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputfile" class="col-sm-1 control-label">商品图片:</label>
                        <div class="col-sm-3">
                            <input type="file" id="inputfile" name="img">
                        </div>
                    </div>
                    <div class="form-group">
                        <img style="width: 50px;" src="" alt="" class="img">
                    </div>
                    <div class="form-group">
                        <label for="inputprice" class="col-sm-1 control-label">商品价格:</label>
                        <div class="col-sm-3">
                            <input type="text" class="form-control" name="productprice" id="inputprice" placeholder="">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputprices" class="col-sm-1 control-label">商品邮费:</label>
                        <div class="col-sm-3">
                            <input type="text" class="form-control" name="productpost" id="inputprices" placeholder="">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputprices" class="col-sm-1 control-label">商品描述:</label>
                        <div class="col-sm-3">
                            <textarea name="content" id="ckeditor" cols="60" rows="10"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class=" col-sm-1">
                            <button type="submit" class="btn btn-default">提交</button>
                        </div>
                    </div>
                </form>
            </li>
        </ul>
    </div>

</body>
<script>
    ClassicEditor.create(document.querySelector('#ckeditor'));
    let inputfile = document.querySelector('#inputfile');
    let img = document.querySelector('.img')
    inputfile.onchange = function() {
        let reader = new FileReader();
        reader.readAsDataURL(inputfile.files[0]);
        reader.onload = function() {
            img.src = reader.result;
        }
    }
</script>

